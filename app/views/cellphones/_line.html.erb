<div class="modal fade" id="line-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= @line.number %> - <%= @line.get_user_full_name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <ul class="list-group">
              <li class="list-group-item list-group-item-primaryrbenv "> Datos de línea</li>
              <li class="list-group-item"><strong>Estado:</strong>
                <span class="badge badge-pill badge-<%= raw @line.get_badge_class_to_state%>"> <%= @line.state %> </span>
              </li>
              <li class="list-group-item"><strong>Tipo de SIM:</strong>
                <span> <%= @line.type_sim %> </span>
              </li>
              <li class="list-group-item"><strong>Servicios:</strong>
                <span> <%= @line.has_inet %> </span>
              </li>
              <li class="list-group-item"> <strong>Lím. Offnet:</strong>
                <span class="badge badge-pill badge-secondary"><%= @line.limit_offnet %></span> minutos
              </li>
              <li class="list-group-item"><strong>Check:</strong>
                <span> <%= (formated_date @line.check_date) + " (#{calculate_time_ago(@line.check_date)})" %> </span>
              </li>
              <li class="list-group-item"><strong>Cuenta:</strong>
                <span> <%= @line.bill_account %> </span>
              </li>
              <li class="list-group-item">
              </li>
            </ul>
          </div>

        
        </div>
      </div> <!-- END modal-body -->

      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
