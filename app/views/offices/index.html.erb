<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-9">
    <h3>Oficinas</h3>
    <%= link_to fa_icon("plus"), new_office_path, class: "btn btn-info" %>
    <table class="table table-striped table-hover table-sm" id="table-offices">
      <thead class="thead-inverse">
        <tr>
          <th class=""> Nombre </th>
          <th class=""> Dependencia </th>
          <th class=""> Delegaci√≥n </th>
          <th class=""> Opciones </th>
        </tr>
      </thead>
      <tbody>
        <% @offices.each do |o| %>
          <tr>
            <td class="center-text-v"> <%= o.name %> </td>
            <td class="center-text-v"> <%= o.get_parent_name %> </td>
            <td class="center-text-v"> <%= o.get_delegation_name %> </td>

            <td class="center-text-v">
              <div class="btn-group" role="group" aria-label="Basic example">
                <div class="btn-group" role="group">
                  <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                  </button>
                  <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                    <a class="dropdown-item" href="#">Dropdown link</a>
                    <a class="dropdown-item" href="#">Dropdown link</a>
                  </div>
                </div>
                <%= link_to fa_icon("eye"), "#office-info-#{o.id}", 'data-toggle' => 'modal', class: "btn btn-info" %>
                <%= link_to fa_icon("pencil"), edit_office_path(o), class: "btn btn-warning" %>
                <%= link_to fa_icon("trash"), office_path(o), method: :delete, class: "btn btn-danger" %>
              </div>
            </td>
          </tr>
          <%= render "offices/show_office", office: o %>
        <% end %>
      </tbody>
      <script type="text/javascript">
      $(document).ready(function(){
        $('#table-offices').DataTable( {
          responsive: true
        } );
      });
      </script>
    </table>
    <%= link_to fa_icon("plus"), new_office_path, class: "btn btn-info" %>
  </div>

  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-3">
    <h3>Delegaciones</h3>
    <ul id='list_delegations'>
      <% @delegations.each do |delegation| %>
        <li id="delegation_<%= delegation.id %>">
          <%= delegation.name %>
          <%= link_to "X", delegation_path(delegation), method: :delete %>
          <%= link_to fa_icon("pencil"), edit_delegation_path(delegation) %>
        </li>
      <% end %>

      <li><%= link_to fa_icon("plus", text: "Nueva"), new_delegation_path %></li>
    </ul>



  </div>
</div>
