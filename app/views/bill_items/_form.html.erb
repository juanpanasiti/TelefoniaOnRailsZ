<%= simple_form_for @item do |l| %>
<div class="row">
  <%= l.input :bill_header_id, label: 'Columna Fact.', collection: @item_header_options, wrapper_html: {class:'col-xs-12 col-sm-6 col-md-6 col-lg-3'} %>
  <%= l.input :concept_id, label: 'Item ID', wrapper_html: {class:'col-xs-12 col-sm-6 col-md-6 col-lg-3'} %>
  <%= l.input :concept_description, label: 'Nombre Descriptivo', wrapper_html: {class:'col-xs-12 col-sm-6 col-md-6 col-lg-6'} %>

</div>
<div class="row">
  <%= l.input :quantity_column, label: 'Guardar Cantidad', collection: @item_quantity_column, wrapper_html: {class:'col-xs-12 col-sm-6 col-md-6 col-lg-6'} %>

</div>

  <%= l.button :submit, 'OK', class: "btn btn-success btn-lg" %>
  <%= link_to fa_icon("thumbs-down", text: "Cancelar"), settings_path(section:'billings'), class: "btn btn-danger btn-lg" %>
<% end %>
