<%= simple_form_for(@device) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :device_model %>
    <%= f.input :imei %>
    <%= f.association :line %>
    <%= f.input :is_personal %>
    <%= f.input :state %>
    <%= f.input :failure %>
    <%= f.input :check_date %>
    <%= f.input :details %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
