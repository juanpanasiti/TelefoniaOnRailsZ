<table class="table table-striped table-hover display responsive no-wrap" id="table-devices">
  <thead>
    <tr>
      <th>Modelo</th>
      <th>IMEI</th>
      <th>Linea Asoc.</th>
      <th>Estado</th>
      <th>Ult. Check</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% devices.each do |device| %>
      <tr>
        <td><%= "#{device.device_model.mark.upcase}#{device.device_model.device_name}" %></td>
        <td><%= device.imei %></td>
        <td><%= device.line %></td>
        <td><%= device.state %></td>
        <td><%= device.check_date %></td>
        <td><%= link_to 'Show', device %>
        <%= link_to 'Edit', edit_device_path(device) %>
        <%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Device', new_device_path %>
