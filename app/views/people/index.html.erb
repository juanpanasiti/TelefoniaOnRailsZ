<h3>Usuarios</h3>
<%= link_to fa_icon("plus"), new_person_path, class: "btn btn-info" %>
<table class="table table-sm table-striped table-responsive table-hover display responsive no-wrap" id="table-people">
  <thead class="thead-dark">
    <tr>
      <th class=""> Nombre </th>
      <th class=""> DNI </th>
      <th class=""> Oficina </th>
      <th class=""> Opciones </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class=""> <%= user.get_full_name %> </td>
        <td class=""> <%= user.get_dni_formated %> </td>
        <td class=""> <%= abreviate_names user.get_office_full_name %> </td>
        <td class="center-text-v">
          <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
            <div class="btn-group btn-group-sm" role="group">
              <%= link_to fa_icon("bars"),'#', {id: "otherOptions", class: "btn btn-secondary dropdown-toggle", 'data-toggle' => 'dropdown'} %>
              <div class="dropdown-menu" aria-labelledby="otherOptions">
                <a class="dropdown-item" href="#">opc1</a>
                <a class="dropdown-item" href="#">opc2</a>
              </div>
            </div>
            <%= link_to fa_icon("eye"), "#user-info-#{user.id}", 'data-toggle' => 'modal', class: "btn btn-info" %>
            <%= link_to fa_icon("pencil"), edit_person_path(user), class: "btn btn-warning" %>
            <%= link_to fa_icon("trash"), '#', class: "btn btn-danger" %>
          </div>

        </td>
      </tr>
      <%= render "people/show", user: user %>
    <% end %>
  </tbody>
  <script type="text/javascript">
  $(document).ready(function(){
    $('#table-people').DataTable( {
      responsive: true
    } );
  });
  </script>
</table>
<%= link_to fa_icon("plus"), new_person_path, class: "btn btn-info" %>
