<%= simple_form_for @user do |l| %>

  <div class="row">
    <div class="col-xs-12 col-sm-5 col-md-4 col-lg-4">
      <%= l.input :lastname, label:'Apellido', wrapper_html: { class: 'mdl-textfield mdl-js-textfield mdl-textfield--floating-label fullwide'},
      input_html: {class: "mdl-textfield__input"},
      label_html: { class: "mdl-textfield__label"} %>
    </div>
    <div class="col-xs-12 col-sm-7 col-md-5 col-lg-5">
      <%= l.input :name, label:'Nombre', wrapper_html: { class: 'mdl-textfield mdl-js-textfield mdl-textfield--floating-label fullwide'},
      input_html: {class: "mdl-textfield__input"},
      label_html: { class: "mdl-textfield__label"} %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
      <%= l.input :dni, label:'N° DNI', wrapper_html: { class: 'mdl-textfield mdl-js-textfield mdl-textfield--floating-label fullwide'},
      input_html: {class: "mdl-textfield__input"},
      label_html: { class: "mdl-textfield__label"} %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
      <%= l.input :office, label:'Oficina', wrapper_html: { class: 'mdl-textfield mdl-js-textfield mdl-textfield--floating-label fullwide'},
      input_html: {class: "mdl-textfield__input"},
      label_html: { class: "mdl-textfield__label"} %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <%= l.input :alert, label:'Resaltar', wrapper_html: { class: 'col-xs-12 col-sm-6 col-md-4 col-lg-2' } %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <%= l.input :accounts, label:'Cuentas y contraseñas', wrapper_html: { class: 'mdl-textfield mdl-js-textfield mdl-textfield--floating-label fullwide'},
                                                              input_html: {class: "mdl-textfield__input", rows:'6'},
                                                              label_html: { class: "mdl-textfield__label"} %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <%= l.input :footnote, label:'Notas', wrapper_html: { class: 'mdl-textfield mdl-js-textfield mdl-textfield--floating-label fullwide'},
                                                              input_html: {class: "mdl-textfield__input", rows:'6'},
                                                              label_html: { class: "mdl-textfield__label"} %>
    </div>
  </div>

  <%= l.button :submit, 'OK', class: "mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored" %>
<% end %>
