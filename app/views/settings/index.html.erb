<%= content_for :tabs do %>
  <!-- tabs -->
  <% position = 0 %>
  <ul class="nav nav-tabs no-list row center-xs" id="section-tabs" role="tablist">

    <li class="nav-item col-md center-text-h">
      <a class="nav-link" data-toggle="tab" href="#offices" role="tab" aria-controls="offices">Oficinas</a>
    </li>
    <li class="nav-item col-md center-text-h">
      <a class="nav-link" data-toggle="tab" href="#devices" role="tab" aria-controls="device_models">Equipos (Modelos)</a>
    </li>
    <li class="nav-item col-md center-text-h">
      <a class="nav-link" data-toggle="tab" href="#billing" role="tab" aria-controls="billing">Facturaci√≥n</a>
    </li>
  </ul>
  <script>
    $(function () {
      $('#section-tabs li:eq(<%= raw @position.to_i %>) a').tab('show')
      $('#<%= @section %>').tab('show')
    })
  </script>
  <!-- /tabs -->
<% end %>

<!-- Main content -->
<div class="tab-content">

  <div class="tab-pane" id="offices" role="tabpanel">
    <%= render "offices/index", offices: @offices %>
  </div>
  <div class="tab-pane" id="devices" role="tabpanel">
    <!-- Nav tabs -->
    <ul class="nav nav-pills nav-justified" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#stock" role="tab">Flota</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#models" role="tab">Modelos</a>
      </li>

    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane active" id="stock" role="tabpanel">
        <h4>Flota de equipos</h4>
        <%= render "devices/index", devices: @devices %>
      </div>
      <div class="tab-pane" id="models" role="tabpanel">
        <h4>Modelos de equipos</h4>
        <%= render "device_models/index", device_models: @device_models %>
      </div>
    </div>

  </div>
  <div class="tab-pane" id="billing" role="tabpanel">
    <h1>
      Facturacion
    </h1>
  </div>
</div>
<!-- /Main content -->
