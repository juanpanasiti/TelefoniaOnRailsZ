<%= content_for :menu do %>
  <ul class="nav flex-column pl-1">
    <li class="nav-item"><a class="nav-link" href="#">Overview</a></li>

    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#dashboard" role="" aria-controls="dashboard">Dashboard</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#lines" role="" aria-controls="lines">Líneas Celulares</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#internals" role="" aria-controls="internals">Núm. Internos</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#users" role="" aria-controls="users">Usuarios</a>
    </li>
  </ul>
<% end %>
<%= content_for :tabs do %>
  <!-- tabs -->
  <% position = 0 %>
  <ul class="nav nav-tabs no-list row center-xs" id="section-tabs" role="tablist">
  </ul>
  <script>
    $(function () {
      $('#section-tabs li:eq(<%= raw @position.to_i %>) a').tab('show')
      $('#<%= @section %>').tab('show')
    })
  </script>
  <!-- /tabs -->
<% end %>

<!-- Main content -->
<div class="tab-content">
  <div class="tab-pane" id="dashboard" role="tabpanel">
    <%= render "dashboard" %>
  </div>
  <div class="tab-pane" id="lines" role="tabpanel">
    <%= render "lines/index", lines: @lines %>
  </div>
  <div class="tab-pane" id="internals" role="tabpanel">
    Internos
  </div>
  <div class="tab-pane" id="users" role="tabpanel">
    <%= render "people/index", users: @users %>
  </div>
</div>
