<%= simple_form_for @plan do |l| %>

  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4">
      <%= l.input :name, label:'Nombre del plan', wrapper_html: { class: ''},
                          input_html: {class: ""},
                          label_html: { class: ""} %>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-3">
      <%= l.input :kind, label:'Tipo de Plan', collection: @kind_options, include_blank: false,
      wrapper_html: { class: ''},
      input_html: {class: ""},
      label_html: { class: ""} %>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-2">
      <%= l.input :normal_price, label:'Monto base del plan', wrapper_html: { class: ''},
      input_html: {class: "", value: number_with_precision(l.object.credit, precision: 2), min: '0'},
      label_html: { class: ""} %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-3">
      <%= l.input :credit, label:'Crédito para todo consumo', wrapper_html: { class: ''},
      input_html: {class: "", value: number_with_precision(l.object.credit, precision: 2), min: '0', step: '5'},
      label_html: { class: ""} %>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-3">
      <%= l.input :roaming, label:'Roaming', collection: @roaming_options, include_blank: false,
      wrapper_html: { class: ''},
      input_html: {class: ""},
      label_html: { class: ""} %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-3">
      <%= l.input :onnet_pack, collection: @minutes_pack_options, include_blank: false, label:'Minutos a Claro', wrapper_html: { class: ''},
      input_html: {class: ""},
      label_html: { class: ""} %>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-3">
      <%= l.input :offnet_pack, collection: @minutes_pack_options, include_blank: false, label:'Minutos a otras compañías', wrapper_html: { class: ''},
      input_html: {class: ""},
      label_html: { class: ""} %>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-2">
      <%= l.input :sms_pack, collection: @sms_pack_options, include_blank: false, label:'SMS', wrapper_html: { class: ''},
      input_html: {class: ""},
      label_html: { class: ""} %>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-2">
      <%= l.input :inet_pack, label:'Pack de datos', collection: @inet_pack_options, include_blank: false,
      wrapper_html: { class: ''},
      input_html: {class: ""},
      label_html: { class: ""} %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= l.input :details, label:'Otros detalles del plan', wrapper_html: { class: ' fullwide'},
      input_html: {class: "", rows:'6'},
      label_html: { class: ""} %>
    </div>
  </div>
<div class="form-actions">
  <%= l.button :submit, button, class:'btn btn-success btn-lg' %>
  <%= link_to fa_icon("thumbs-down", text: "Cancelar"), cellphones_plans_path, class: "btn btn-danger btn-lg" %>
</div>

<% end %>
