<h2>Tareas (<%= @tasks.count %>)</h2>
<%= link_to icon('fas',"plus-circle", text: "Nueva tarea"), new_task_path, class: "btn btn-success" %>
<table class="table table-striped table-bordered table-hover table-responsive-md">
  <thead class="thead-dark">
    <th>#</th>
    <th>Tarea</th>
    <th>Tipo</th>
    <th>Estado</th>
    <th>Fecha l√≠m.</th>
    <th>Opciones</th>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr class='<%= raw task.get_row_table_class %>'>
      <td class="center-text-v"> <%= task.id %> </td>
      <td class="center-text-v"> <%= task.name %> </td>
      <td class="center-text-v"> <%= task.type_task %> </td>
      <td class="center-text-v"> <%= task.state %> </td>
      <td class="center-text-v"> <%= formated_date task.date_limit %> </td>
      <td class="center-text-v">
        <div class="btn-group" role="group" aria-label="Option buttons">
          <%= link_to icon('fas',"edit"), edit_task_path(task), class: "btn btn-warning btn-sm" %>
          <%= link_to icon('fas',"eye"), "#task-info-#{task.id}", 'data-toggle' => 'modal', class: "btn btn-info btn-sm" %>
          <%= link_to icon('fas',"trash"), task, method: :delete, class: "btn btn-danger btn-sm" %>
        </div>
      </td>
    </tr>
    <%= render 'tasks/show', task: task %>
    <% end %>
  </tbody>
</table>
